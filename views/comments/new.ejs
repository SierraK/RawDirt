<%- include("../partials/header") %> 

<div class="container">
    <div class="container-login" id="container">
        <div class="form-container">
            <form style="width: 100%;" action="/offroads/<%= offroad._id %>/comments" method="POST">
                <h2 class="mb-4">Add Comment</h2>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[headline]" placeholder="Headline"/>
                </div>
                <div class="form-group">
                    <textarea rows="6" class="form-control" type="text" name="comment[text]" placeholder="Leave Comment..."></textarea>
                </div>
                <div class="form-group">
                    <button type="submit">Submit</button>
                </div>
            </form>
            <a class="signup-link" href="/offroads/<%= offroad._id %>">Back</a>
        </div>    
        <div class="overlay-container d-none d-md-block">
            <div class="box"></div>
        </div>
    </div>    
</div>

<%- include("../partials/footer") %> 
