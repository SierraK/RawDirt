<%- include("../partials/header") %> 

<div class="container">
    <div class="container-login" id="container">
        <div class="form-container">
            <form class="w-100" action="/offroads/<%= offroad_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <h2 class="mb-5">Edit Comment</h2>
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[headline]" value="<%= comment.headline %>" required/>
                </div>
                <div class="form-group">
                    <textarea rows="6" required class="form-control" type="text" name="comment[text]"><%= comment.text %></textarea>
                </div>
                <div class="form-group">
                    <button type="submit">Submit</button>
                </div>
            </form>
            <a class="signup-link mb-4 mt-0" href="/offroads/<%= offroad_id %> ">Back</a>
        </div>    
        <div class="overlay-container d-none d-md-block">
            <div class="box"></div>
        </div>
    </div>    
</div>

<%- include("../partials/footer") %> 
